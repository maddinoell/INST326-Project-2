    "import tkinter as tk\n",
    "from tkinter import ttk\n",
    "import datetime\n",
    "import json\n",
    "\n",
    "class MainWindow(tk.Tk):\n",
    "    def __init__(self):\n",
    "        super().__init__()\n",
    "        self.geometry(\"600x400\")\n",
    "        self.title('Notebook')\n",
    "        self.notebook = []\n",
    "        self.notes = []\n",
    "        self.note_widgets = []\n",
    "\n",
    "        self.new_button = ttk.Button(self, text=\"New\", command=self.new_note)\n",
    "        self.new_button.pack(side=\"left\", padx=10)\n",
    "\n",
    "        self.open_button = ttk.Button(self, text=\"Open\", command=self.open_notebook)\n",
    "        self.open_button.pack(side=\"left\", padx=10)\n",
    "\n",
    "        self.save_button = ttk.Button(self, text=\"Save\", command=self.save_notebook)\n",
    "        self.save_button.pack(side=\"left\", padx=10)\n",
    "\n",
    "    def new_note(self):\n",
    "        note_window = NoteForm(self, self.notebook, self.notes)\n",
    "        return None\n",
    "\n",
    "    def open_notebook(self):\n",
    "        # Implement opening a notebook\n",
    "        print('Open notebook')\n",
    "        return None\n",
    "\n",
    "    def save_notebook(self):\n",
    "        # Implement saving the notebook\n",
    "        with open(\"notes.json\", \"w\") as file:\n",
    "            json.dump([note.to_dict() for note in self.notes], file, indent=4)\n",
    "        print('Notebook saved to notes.json')\n",
    "        return None\n",
    "\n",
    "\n",
    "class NoteForm(tk.Toplevel):\n",
    "    def __init__(self, master, notebook, notes):\n",
    "        super().__init__(master)\n",
    "        self.geometry(\"400x450\")\n",
    "        self.title('New Note')\n",
    "\n",
    "        self.notebook = notebook\n",
    "        self.notes = notes\n",
    "\n",
    "        self.title_label = ttk.Label(self, text=\"Title:\")\n",
    "        self.title_label.pack()\n",
    "        self.title_entry = ttk.Entry(self)\n",
    "        self.title_entry.pack()\n",
    "\n",
    "        self.text_label = ttk.Label(self, text=\"Text:\")\n",
    "        self.text_label.pack()\n",
    "        self.text_entry = tk.Text(self, height=10)\n",
    "        self.text_entry.pack()\n",
    "\n",
    "        self.link_label = ttk.Label(self, text=\"Link:\")\n",
    "        self.link_label.pack()\n",
    "        self.link_entry = ttk.Entry(self)\n",
    "        self.link_entry.pack()\n",
    "\n",
    "        self.tags_label = ttk.Label(self, text=\"Tags (comma separated):\")\n",
    "        self.tags_label.pack()\n",
    "        self.tags_entry = ttk.Entry(self)\n",
    "        self.tags_entry.pack()\n",
    "\n",
    "        self.author_label = ttk.Label(self, text=\"Author:\")\n",
    "        self.author_label.pack()\n",
    "        self.author_entry = ttk.Entry(self)\n",
    "        self.author_entry.pack()\n",
    "\n",
    "        self.submit_button = ttk.Button(self, text=\"Submit\", command=self.submit)\n",
    "        self.submit_button.pack()\n",
    "\n",
    "    def submit(self):\n",
    "        title = self.title_entry.get()\n",
    "        text = self.text_entry.get(\"1.0\", tk.END)\n",
    "        link = self.link_entry.get()\n",
    "        tags = [tag.strip() for tag in self.tags_entry.get().split(\",\")]\n",
    "        author = self.author_entry.get()\n",
    "\n",
    "        if title and text:\n",
    "            note_dict = {\n",
    "                \"title\": title,\n",
    "                \"text\": text,\n",
    "                \"link\": link,\n",
    "                \"tags\": tags,\n",
    "                \"author\": author,\n",
    "                \"creation_date\": datetime.datetime.now().isoformat(),\n",
    "            }\n",
    "\n",
    "            new_note = MakeNote(note_dict)\n",
    "            self.notes.append(new_note)\n",
    "            self.master.note_widgets.append(NoteWidget(self.master, new_note))\n",
    "            self.master.note_widgets[-1].pack(fill=\"x\")\n",
    "            self.destroy()\n",
    "\n",
    "            print(self.notes)\n",
    "        else:\n",
    "            print(\"Title and text cannot be empty!\")\n",
    "\n",
    "\n",
    "class MakeNote():\n",
    "    def __init__(self, note_dict):\n",
    "        self.title = note_dict['title']\n",
    "        self.text = note_dict['text']\n",
    "        self.link = note_dict.get('link', '')\n",
    "        self.tags = note_dict.get('tags', [])\n",
    "        self.author = note_dict.get('author', '')\n",
    "        self.creation_date = note_dict.get('creation_date', datetime.datetime.now().isoformat())\n",
    "\n",
    "    def to_dict(self):\n",
    "        return {\n",
    "            \"title\": self.title,\n",
    "            \"text\": self.text,\n",
    "            \"link\": self.link,\n",
    "            \"tags\": self.tags,\n",
    "            \"author\": self.author,\n",
    "            \"creation_date\": self.creation_date,\n",
    "        }\n",
    "\n",
    "\n",
    "class NoteWidget(ttk.Label):\n",
    "    def __init__(self, master, note):\n",
    "        super().__init__(master, text=note.title, anchor=\"w\")\n",
    "        self.note = note\n",
    "        self.bind(\"<Button-1>\", self.open_note)\n",
    "\n",
    "    def open_note(self, event):\n",
    "        note_window = NoteFormReadOnly(self, self.note)\n",
    "\n",
    "\n",
    "class NoteFormReadOnly(tk.Toplevel):\n",
    "    def __init__(self, master, note):\n",
    "        super().__init__(master)\n",
    "        self.geometry(\"400x450\")\n",
    "        self.title('Note')\n",
    "\n",
    "        self.note = note\n",
    "\n",
    "        self.title_label = ttk.Label(self, text=note.title)\n",
    "        self.title_label.pack()\n",
    "\n",
    "        self.text_label = tk.Text(self, wrap=\"word\", height=10)\n",
    "        self.text_label.insert(\"1.0\", note.text)\n",
    "        self.text_label.pack()\n",
    "\n",
    "        self.link_label = ttk.Label(self, text=note.link)\n",
    "        self.link_label.pack()\n",
    "\n",
    "        self.tags_label = ttk.Label(self, text=\", \".join(note.tags))\n",
    "        self.tags_label.pack()\n",
    "\n",
    "        self.author_label = ttk.Label(self, text=note.author)\n",
    "        self.author_label.pack()\n",
    "\n",
    "        self.creation_date_label = ttk.Label(self, text=note.creation_date)\n",
    "        self.creation_date_label.pack()\n",
    "\n",
    "# main execution\n",
    "if __name__ == '__main__':\n",
    "    main_window = MainWindow()\n",
    "    main_window.mainloop()\n"
   ]
  },
